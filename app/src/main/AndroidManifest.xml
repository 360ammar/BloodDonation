<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ammar.blooddonation">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
        <activity
            android:name=".Login"
            android:label="@string/title_activity_login" />
        <activity android:name=".SignupActivity" />
        <activity
            android:name=".BloodRequired"
            android:label="@string/title_activity_blood_required"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!--
      android:value="AIzaSyCdVtSOB0ocBJqhfWAoefc4ctrL5qJIusg"

      <meta-data
            android:name="com.google.android.geo.API_KEY"
          android:value="@values/google_maps_api.xml"/>
        -->

        <activity
            android:name=".Verification"
            android:label="@string/title_activity_verification"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BloodRequestsActivity"
            android:label="@string/title_activity_blood_requests"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AvailableDonorsActivity"
            android:label="@string/title_activity_available_donors"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".DonationHistory"
            android:label="@string/title_activity_donation_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".ProfilePage"
            android:label="@string/title_activity_profile_page"
            android:theme="@style/AppTheme.NoActionBar" />
        <!--
            <activity
            android:name=".MainMap"
            android:label="@string/title_activity_maps" />
        -->

        <activity
            android:name=".MyRequestsActivity"
            android:label="@string/title_activity_my_requests"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BloodBanksActivity"
            android:label="@string/title_activity_blood_banks"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PostVerification"
            android:label="@string/title_activity_post_verification"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>